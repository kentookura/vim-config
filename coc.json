{
  "suggest.enablePreview": true,
  "coc.preferences.formatOnSaveFiletypes": ["typescript"],
  "languageserver": {
    "digestif": {
      "command": "digestif",
      "filetypes": ["tex"]
    },
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": ["vim"]
    },
    "nix": {
      "command": "rnix-lsp",
      "filetypes": ["nix"]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["lhaskell", "haskell"],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true,
          "maxNumberOfProblesm": 10,
          "completionsSnippetsOn": true
        }
      }
    }
  }
}
